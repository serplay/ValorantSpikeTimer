<Window x:Class="ValorantSpikeTimer.CalibrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Valorant Spike Timer - Calibration"
        WindowState="Maximized"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#66000000"
        Topmost="True"
        ShowInTaskbar="False"
        Cursor="Cross">
    
    <Grid>
        <Canvas x:Name="CalibrationCanvas" />
        
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,50">
            <Border Background="#DD000000" Padding="30" CornerRadius="10">
                <StackPanel>
                    <TextBlock x:Name="InstructionText" 
                               Text="Click on the LEFT edge of the spike indicator (red area)"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               MaxWidth="600"
                               Margin="0,0,0,15"/>
                    
                    <TextBlock x:Name="StatusText"
                               Text="Point 1 of 3"
                               FontSize="16"
                               Foreground="Yellow"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    
                    <TextBlock x:Name="ColorInfoText"
                               Text="The color at this point will be sampled for threshold detection"
                               FontSize="12"
                               Foreground="#AAFFFFFF"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               MaxWidth="500"
                               Margin="0,5,0,10"/>
                    
                    <Button x:Name="CancelButton"
                            Content="Cancel (ESC)"
                            Width="200"
                            Height="40"
                            FontSize="16"
                            Margin="0,15,0,0"
                            Click="CancelButton_Click"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
